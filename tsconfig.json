{
  "compilerOptions": {
    "baseUrl": ".",

    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2020",

    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@styles/*": ["src/css/*"],
      "@webfonts/*": ["src/webfonts/*"]
    }
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.js", "**/*.ts", "**/*.tsx", "**/*.css"],
  "exclude": ["node_modules"]
}
